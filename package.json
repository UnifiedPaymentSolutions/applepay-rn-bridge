{
  "name": "@everypay/applepay-rn-bridge",
  "version": "1.1.0",
  "description": "EveryPay Apple Pay React Native Bridge (iOS Only)",
  "homepage": "https://github.com/UnifiedPaymentSolutions/applepay-rn-bridge",
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/module/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "ios",
    "*.podspec",
    "react-native.config.js",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "build": "bob build",
    "clean": "rimraf lib",
    "prepare": "bob build"
  },
  "keywords": [
    "react-native",
    "ios",
    "ios-only",
    "apple pay",
    "everypay",
    "payments",
    "applepay"
  ],
  "author": "EveryPay",
  "license": "MIT",
  "devDependencies": {
    "@react-native-community/cli": "^18.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.17",
    "react-native-dotenv": "^3.4.11",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.76.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./__tests__/jest.setup.ts"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.ts?(x)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-vector-icons)/)"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      "typescript"
    ]
  },
  "codegenConfig": {
    "name": "RNApplePayBridgeSpec",
    "type": "all",
    "jsSrcsDir": "src/specs"
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
